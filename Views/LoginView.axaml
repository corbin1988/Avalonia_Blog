<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:Avalonia_Blog.ViewModels"
             x:Class="Avalonia_Blog.Views.LoginView"
             x:DataType="vm:LoginViewModel">
    <StackPanel HorizontalAlignment="Center"
                VerticalAlignment="Center">
        <TextBlock Text="Currently on:" />
        <TextBlock Text="{Binding UrlPathSegment} view" />
        <Button Content="Register" Command="{Binding GoToRegister}" />
        <Button Content="Login" Command="{Binding GoToPosts}" />
    </StackPanel>
</UserControl>